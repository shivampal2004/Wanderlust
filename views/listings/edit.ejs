<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="offset-4 mt-3">Edit this listing</h1>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input id="title" type="text" class="form-control" name="listing[title]" value="<%= listing.title %>" required>
                    <div class="invalid-feedback">Title Required</div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Description</label>
                    <textarea id="desc" class="form-control" name="listing[description]" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Not Good</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Image Preview</label>
                    <div>
                        <img src="<%= ogImgUrl %>" alt="listingImage" class="previewImg">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Upload New Image</label>
                    <input id="img" class="form-control" type="file" name="listing[image]">
                    <div class="invalid-feedback">Upload Correct Image Extension</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input id="price" class="form-control" type="number" required name="listing[price]" value="<%= listing.price %>">
                        <div class="invalid-feedback">Enter Valid Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input id="country" class="form-control" type="text" required name="listing[country]" value="<%= listing.country %>">
                        <div class="invalid-feedback">Country Name should be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input id="location" class="form-control" type="text" required name="listing[location]" value="<%= listing.location %>">
                    <div class="invalid-feedback">Location Required</div>
                </div>
                <button class="btn edit-btn mb-3">Edit</button>
            </form>
        </div>
    </div>
</body>